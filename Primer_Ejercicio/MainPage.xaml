<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Primer_Ejercicio.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="22" CornerRadius="0">
            <Label Text="Operaciones Matematicas" HorizontalTextAlignment="Center" TextColor="White" FontSize="30"/>
        </Frame>
        <Label Text="" />

        <Entry x:Name="txtnum1" Placeholder="Numero 1" Keyboard="Numeric"/>
        
        <Entry x:Name="txtnum2" Placeholder="Numero 2" Keyboard="Numeric"/>

        <Button x:Name="btnsuma" Text="Suma" Clicked="btnsuma_Clicked" />

        <Button x:Name="btnresta" Text="Resta" Clicked="btnresta_Clicked" />

        <Button x:Name="btndivision" Text="Division" Clicked="btndivision_Clicked" />

        <Button x:Name="btnmultiplicacion" Text="Multiplicacion" Clicked="btnmultiplicacion_Clicked" />

    </StackLayout>

</ContentPage>
